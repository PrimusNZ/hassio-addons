{
  "name": "MagicMirror²",
  "version": "0.23.3",
  "slug": "magic_mirror",
  "description": "MagicMirror² is an open source modular smart mirror platform. This run the server in you HASS.IO environment.",
  "url": "https://github.com/PrimusNZ/hassio-addons",
  "startup": "application",
  "boot": "auto",
  "arch": ["armhf", "amd64"],
  "homeassistant_api": true,
  "ports": {
    "8080/tcp": 8181
  },
  "options": {
    "gitupdate": true,
    "npmupdate": false,
    "npminstall": false,
    "modules": [
      {
        "name": "MMM-OnScreenMenu",
        "git": "https://github.com/sytone/MMM-OnScreenMenu.git",
        "cmd": ""
      },
      {
        "name": "DailyXKCD",
        "git": "https://github.com/Blastitt/DailyXKCD.git",
        "cmd": ""
      },
      {
        "name": "MMM-pages",
        "git": "https://github.com/edward-shen/MMM-pages.git",
        "cmd": ""
      },
      {
        "name": "MMM-iFrame",
        "git": "https://github.com/alberttwong/MMM-iFrame.git",
        "cmd": ""
      },
      {
        "name": "MMM-homeassistant-sensors",
        "git": "https://github.com/leinich/MMM-homeassistant-sensors.git",
        "cmd": "cd $MIRROR_APP_PATH/modules/MMM-homeassistant-sensors && wget https://github.com/Templarian/MaterialDesign-Webfont/archive/master.zip && unzip master.zip"
      },
      {
        "name": "MMM-HASS",
        "git": "https://github.com/aserramonner/MMM-HASS.git",
        "cmd": ""
      }
    ]
  },
  "schema": {
    "gitupdate": "bool",
    "npmupdate": "bool",
    "npminstall": "bool",
    "modules": [
      {
        "name": "str",
        "git": "url",
        "cmd": "str"
      }
    ]
  },
  "webui": "http://[HOST]:[PORT:8080]/",
  "map": [
    "config:rw"
  ],
  "image": "iownsu/magic-mirror-{arch}"
}
