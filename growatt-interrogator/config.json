{
  "name": "Growatt Interrogator",
  "version": "0.0.1",
  "slug": "growatt_interrogator",
  "description": "A script to interrogate a Growatt Inverter for power information and publishes to MQTT. - Optionally uploads data to PVOutput",
  "url": "https://github.com/PrimusNZ/hassio-addons/",
  "startup": "application",
  "boot": "auto",
  "arch": ["armhf", "amd64"],
  "map": ["share"],
  "options": {
    "pvoutput_enabled": true,
    "pvoutput_systemid": "",
    "pvoutput_apikey": "",
    "owm_key": "",
    "owm_lat": "",
    "owm_long": ""
  },
  "schema": {
    "pvoutput_enabled": "bool",
    "pvoutput_systemid": "str?",
    "pvoutput_apikey": "str?",
    "owm_key": "str?",
    "owm_lat": "str?",
    "owm_long": "str?"
  },
  "uart": true
}
